{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "rootDir": "../",
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "types": ["node"],
    "useDefineForClassFields": false,
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@features/*": ["src/features/*"],
      "@gas/*": ["src/gas/*"],
      "@lib/*": ["src/lib/*"],
      "@queue/*": ["src/features/queue/*"]
    }
  },
  "include": ["../tools/**/*.ts", "../src/**/*.ts"]
}
