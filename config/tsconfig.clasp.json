    "noUnusedParameters": true,
    "outDir": "build",
    "rootDir": "../src",
    "target": "ES2021",
    "types": ["google-apps-script"],
    "useDefineForClassFields": false
  },
  "extends": "./tsconfig.base.json",
  "include": ["../src/**/*.ts"]
}
